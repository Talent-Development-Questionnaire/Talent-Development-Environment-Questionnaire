<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ic="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             x:Class="TDQ.PopupPages.AddGroupPage"
             xmlns:sharp="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.ModalPresentationStyle="OverFullScreen"
             BackgroundColor="Transparent">

    <StackLayout VerticalOptions="CenterAndExpand">

        <sharp:MaterialFrame Margin="40"
                             CornerRadius="30"
                             Style="{StaticResource BlurFrame}">

            <StackLayout>

                <Label x:Name="LblTitle"
                       Text="New Group"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       FontSize="36"
                       FontAttributes="Italic"/>
                <ic:CircleImage x:Name="ImgBtnAddGroupPhoto"    
                                Source="ic_add_photo.png"    
                                Aspect="AspectFill"
                                HorizontalOptions="Center"
                                VerticalOptions="StartAndExpand"
                                HeightRequest="84"
                                WidthRequest="84">

                    <ic:CircleImage.GestureRecognizers>
                        <TapGestureRecognizer
                                    Tapped="ImgBtnAddGroupPhoto_Clicked"
                                    NumberOfTapsRequired="1"/>
                    </ic:CircleImage.GestureRecognizers>
                </ic:CircleImage>

                <Entry x:Name="entryName"
                       Placeholder="Group Name"
                       Text="{Binding Name}"
                       Style="{DynamicResource entryStyle}"
                       TextColor="White"
                       PlaceholderColor="White"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    
                    <Entry 
                    x:Name="entryEmail"
                    Placeholder="Enter Email" 
                    Style="{DynamicResource entryStyle}"
                    Keyboard="Email"
                    TextColor="White"
                    PlaceholderColor="White"
                    Grid.Column="0"/>
                    
                    <ImageButton
                    x:Name="ImgBtnAddEmail"
                    Source="ic_add"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand" 
                    BackgroundColor="Transparent"
                    Clicked="ImgBtnAddEmail_Clicked"/>
                </Grid>
                
                <ListView x:Name="emailList"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="Center"
                        Style="{DynamicResource listviewStyle}"
                        ItemSelected="emailList_ItemSelected">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Label Text="{Binding}"
                                       HorizontalTextAlignment="Center" HorizontalOptions="Center"
                                       Style="{DynamicResource labelStyle}"/>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <Button Text="Save" 
                        Style="{DynamicResource buttonStyle}"
                        Clicked="BtnSave_Clicked"/>

                <Button x:Name="BtnCanel"
                        Text="Cancel" 
                        Style="{DynamicResource buttonStyle}"  
                        Clicked="BtnCancel_Clicked"/>
                
            </StackLayout>
        </sharp:MaterialFrame>
        
    </StackLayout>
</ContentPage>